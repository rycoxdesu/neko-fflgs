{
  "name": "nekos-fastflags",
  "version": "1.1.0",
  "description": "A utility to manage and apply Roblox FastFlags configurations easily.",
  "main": "main.js",
  "author": {
    "name": "Neko's Circle",
    "email": "support@nekocircle.com",
    "url": "https://github.com/rycoxdesu"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rycoxdesu/neko-fflgs.git"
  },
  "homepage": "https://github.com/rycoxdesu/neko-fflgs#readme",
  "bugs": {
    "url": "https://github.com/rycoxdesu/neko-fflgs/issues"
  },
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:portable": "electron-builder --config portable-config.json",
    "dist:all": "npm run dist && npm run dist:portable"
  },
  "devDependencies": {
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.nekos.fastflagssaver",
    "productName": "Neko FastFlags Saver",
    "copyright": "Copyright Â© 2024 Neko's Circle",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "cute2.ico",
      "artifactName": "NekoFastFlags_Setup_${version}.exe",
      "certificateFile": "neko_cert.pfx",
      "certificatePassword": "password123",
      "legalTrademarks": "Neko's Circle",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Neko FastFlags"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rycoxdesu",
        "repo": "neko-fflgs"
      }
    ]
  },
  "dependencies": {}
}